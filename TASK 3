import tkinter as tk
from tkinter import messagebox
import random
import string

def generate_password(strength):
    try:
        length = int(length_entry.get())
        if length <= 0:
            raise ValueError("Length must be greater than 0")

        if strength == 'weak':
            characters = string.ascii_lowercase
        elif strength == 'medium':
            characters = string.ascii_letters + string.digits
        else:  # strong
            characters = string.ascii_letters + string.digits + string.punctuation

        password = ''.join(random.choice(characters) for _ in range(length))
        password_var.set(password)

    except ValueError:
        messagebox.showerror("Invalid Input", "Please enter a valid positive integer for password length.")

# GUI Setup
root = tk.Tk()
root.title("Password Generator")
root.geometry("400x300")
root.config(bg="#f0f0f0")

# Title
title = tk.Label(root, text="🔐 Password Generator", font=("Arial", 16, "bold"), bg="#f0f0f0", fg="#333")
title.pack(pady=10)

# Input Field
length_label = tk.Label(root, text="Enter password length:", font=("Arial", 12), bg="#f0f0f0")
length_label.pack(pady=5)

length_entry = tk.Entry(root, font=("Arial", 12), justify="center")
length_entry.pack(pady=5)

# Password Buttons
button_frame = tk.Frame(root, bg="#f0f0f0")
button_frame.pack(pady=10)

tk.Button(button_frame, text="Weak", font=("Arial", 11), bg="#FF9999", command=lambda: generate_password('weak')).grid(row=0, column=0, padx=5)
tk.Button(button_frame, text="Medium", font=("Arial", 11), bg="#FFCC66", command=lambda: generate_password('medium')).grid(row=0, column=1, padx=5)
tk.Button(button_frame, text="Strong", font=("Arial", 11), bg="#99CC99", command=lambda: generate_password('strong')).grid(row=0, column=2, padx=5)

# Display Password
password_var = tk.StringVar()
password_display = tk.Entry(root, textvariable=password_var, font=("Arial", 12), width=30, justify="center", state="readonly")
password_display.pack(pady=20)

root.mainloop()
